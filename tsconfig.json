{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib",
    "module": "esnext",
    "target": "esnext",
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "isolatedModules": false,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "components"
  ]
}
